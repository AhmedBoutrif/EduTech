{% extends 'base.html.twig' %}

{% block title %}Create New User - Append{% endblock %}

{% block main %}
    <section class="section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="card">
                        <div class="card-body">
                            <h1 class="card-title text-center mb-4">Create New User</h1>

                            {# Start the form and disable HTML5 validation #}
                            {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'form-horizontal'}}) }}

                                {# Include the form fields with error messages #}
                                {{ include('user/_form.html.twig') }}

                                {# Submit Button #}
                                <div class="form-group text-center">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="bi bi-save"></i> Create User
                                    </button>
                                </div>

                            {# End the form #}
                            {{ form_end(form) }}

                            {# Back to list link #}
                            <div class="text-center mt-4">
                                <a href="{{ path('app_user_index') }}" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left"></i> Back to List
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}