{% extends 'base.html.twig' %}

{% block title %}Admin Profile{% endblock %}

{% block main %}
    <section class="section py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="card shadow-lg border-0 rounded-4 bg-dark text-white">
                        <div class="card-body p-5 text-center">
                            <img src="{{ asset('assets/back/img/profile-img.jpg') }}" class="rounded-circle mb-3" alt="Profile Picture" width="150">
                            <h2 class="fw-bold text-warning">{{ user.firstName }} {{ user.lastName }}</h2>
                            <p class="text-light">{{ user.email }}</p>
                            <p class="text-muted">Role: {{ user.roles|join(', ') }}</p>
                            
                            <div class="d-grid gap-2 mt-4">
                                <a href="#" class="btn btn-outline-warning">Edit Profile</a>
                                <a href="{{ path('app_logout') }}" class="btn btn-danger">Logout</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
