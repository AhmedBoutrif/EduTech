{% extends 'baseB.html.twig' %}

{% block title %}Feed Index{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Feed Index</h1>

        <!-- Bouton pour crÃ©er un nouveau feed -->
        <div class="text-end mb-4">
            <a href="{{ path('app_feedb_new') }}" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Feed
            </a>
        </div>

        <!-- Tableau des feeds -->
        <div class="card shadow-sm">
            <div class="card-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            
                            <th scope="col">Publication</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for feed in feeds %}
                            <tr>
                            
                                <td>{{ feed.publication }}</td>
                                <td>
                                    <a href="{{ path('app_feedb_show', {'id': feed.id}) }}" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye"></i> Show
                                    </a>
                                    <a href="{{ path('app_feedb_edit', {'id': feed.id}) }}" class="btn btn-sm btn-outline-secondary">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="3" class="text-center">No feeds found</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

       
{% endblock %}