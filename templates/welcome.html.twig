{% extends 'base.html.twig' %}

{% block title %}Welcome{% endblock %}

{% block main %}
<div class="container text-center mt-5">
    <h1>Welcome, {{ user.firstName }}!</h1>
    <p>You are logged in as <strong>{{ user.email }}</strong>.</p>

    {% if 'ROLE_TUTOR' in user.roles %}
        <p>Your role: <span class="badge bg-primary">Tutor</span></p>
    {% elseif 'ROLE_STUDENT' in user.roles %}
        <p>Your role: <span class="badge bg-success">Student</span></p>
    {% endif %}

    <a href="{{ path('app_logout') }}" class="btn btn-danger mt-3">Logout</a>
</div>
{% endblock %}
