{% extends 'base.html.twig' %}

{% block title %}New Event{% endblock %}

{% block main %}
    <h1>Create a new Event</h1>

    {# Affichage des messages de succès ou d'erreur #}
    {% for message in app.session.flashBag.get('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    {# Inclure le formulaire depuis un fichier externe (s'il existe) #}
    {{ include('controller_event/_form.html.twig') }}

    {# Lien de retour à la liste des événements #}
    <a href="{{ path('app_controller_event_index') }}">Back to list</a>
{% endblock %}
