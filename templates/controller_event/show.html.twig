{% extends 'base.html.twig' %}

{% block title %}Event{% endblock %}

{% block main %}
    <h1>Event</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ event.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ event.description }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ event.date ? event.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_controller_event_index') }}">back to list</a>

    <a href="{{ path('app_controller_event_edit', {'id': event.id}) }}">edit</a>

    {{ include('controller_event/_delete_form.html.twig') }}
{% endblock %}
